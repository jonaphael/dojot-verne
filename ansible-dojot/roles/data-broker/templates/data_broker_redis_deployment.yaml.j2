---
apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  labels:
    name: data-broker-redis
    app: dojot
  name: data-broker-redis
  namespace: {{ dojot_namespace }}
spec:
  replicas: 1
  template:
    metadata:
      labels:
        name: data-broker-redis
        app: dojot
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: kubernetes.io/hostname
                operator: NotIn
                values:
                - verne-worker
                - verne-worker-2
                - verne-worker-3
                - verne-worker-4
      containers:
      - image: redis:alpine
        name: data-broker-redis
      restartPolicy: Always
